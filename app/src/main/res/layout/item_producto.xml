        android:text="Precio" />

    <TextView
        android:id="@+id/ivaTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp"
        android:text="IVA" />

    <TextView
        android:id="@+id/iepsTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp"
        android:text="IEPS" />
