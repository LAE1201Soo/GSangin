<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/productoID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID del Producto:"
        android:textSize="18sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/claveTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clave del Producto:"
        android:textSize="14sp"
        android:textColor="#666" />

    <TextView
        android:id="@+id/nombreProductoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Producto:"
        android:textSize="14sp"
        android:textColor="#666" />

    <TextView
        android:id="@+id/descripcionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n del Producto:"
        android:textSize="14sp"
        android:textColor="#666" />

    <TextView
        android:id="@+id/precioTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio del Producto:"
        android:textSize="14sp"
        android:textColor="#666" />

    <TextView
        android:id="@+id/ivaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IVA del Producto:"
        android:textSize="14sp"
        android:textColor="#666" />

    <TextView
        android:id="@+id/iepsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IEPS del Producto:"
        android:textSize="14sp"
        android:textColor="#666" />
</LinearLayout>
